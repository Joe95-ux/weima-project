<%- include("partials/header") %>
<section id="header">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../images/use3.jpeg" class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <div class="header-note-wrapper">
            <h1 class="heading stort-head">beautiful puppies</h1>
            <p class="para-note">At Everland Puppies, we have been breeding dogs for over a decade now. we take our
              responsibilities very seriously and strive to ensure the health and well-being of our pets.</p>
            <a href="#our-puppies" class="find-btn" role="button"><i class="paw fas fa-paw"></i>find a puppy<i
                class="paw fas fa-paw"></i></a>
          </div>

        </div>
      </div>
      <div class="carousel-item">
        <img src="../images/use2.jpg" class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <div class="header-note-wrapper">
            <h1 class="heading">Amazing Services!</h1>
            <p class="para-note">Our main goal is to match our puppies with caring and loving families; which is why we
              ensure communication and transparency at every level in order to better serve our clients.</p>
            <a href="/shipping" class="find-btn" role="button"><i class="paw fas fa-paw"></i>Learn more<i
                class="paw fas fa-paw"></i></a>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="../images/use1.jpeg"
          class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <div class="header-note-wrapper">
            <h1 class="heading">A happy family</h1>
            <p class="para-note">There is no better feeling than when we match one of our precious puppies with their
              caring new owner; which is why we put in so much time, love and effort in bringing up these puppies.</p>
            <a href="/about" class="find-btn" role="button"><i class="paw fas fa-paw"></i>About Us<i
                class="paw fas fa-paw"></i></a>
          </div>

        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<!--our puppies-->

<section id="our-puppies">
  <div class="wrapper-enclosure">
    <div class="section-title">
      <% if(messages){%>
        <% if(messages.error){%>
        <div class="flash-wrapper home-flash">
            <div class="flash-message warning">
                <h5 class="flash-error"><%=messages.error[0]%> </h5>
            </div>
        </div>

        <%}%>
                <%if(messages.success){ %>
        <div class="flash-wrapper home-flash">
            <div class="flash-message success-info">
                <h5 class="flash-success"><%=messages.success[0]%></h5>
            </div>
        </div>

        <% } %>
        <% } %>
      <h2 class="product-title">our beautiful puppies</h2>
      <p>
        It is our profound pleasure to present to you these beautiful Doberman
        Pinscher puppies. Feel free to click on any of these images to find out
        more.
      </p>
    </div>
    <div class="puppies-center">
      <% for(let i = 0; i < allPuppies.length; i++){ %>

      <article class="single-puppy">
        <div class="img-container">
          <img src="<%= allPuppies[i].photo%>"alt="<%= allPuppies[i].name %>" class="puppy-img">
          <a class="buy-me" type="button" href="/puppies/<%=allPuppies[i]._id%>"><i class="fas fa-paw"></i>Buy me</a>
        </div>
        <div class="about-puppy">
          <h3 class="name"><%= allPuppies[i].name %></h3>
          <hr class="product-rule" />
          <h4 class="description">
            <span><%= allPuppies[i].sex %>, </span><%= allPuppies[i].age %> old
          </h4>
        </div>
      </article>

      <% }; %>
    </div>
  </div>


</section>

